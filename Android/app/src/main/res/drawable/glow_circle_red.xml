<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow ring for alert state -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#80E22134"
                android:centerColor="#40E22134"
                android:endColor="#00000000"/>
            <size android:width="120dp" android:height="120dp"/>
        </shape>
    </item>
    
    <!-- Inner circle -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:startColor="#F15E6C"
                android:endColor="#E22134"/>
            <size android:width="100dp" android:height="100dp"/>
        </shape>
    </item>
</layer-list>
