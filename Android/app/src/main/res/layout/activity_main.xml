<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Content Container (using FrameLayout to allow floating elements) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Sticky Top Header -->
            <RelativeLayout
                android:id="@+id/topHeader"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:paddingHorizontal="4dp"
                android:background="@color/background"
                android:elevation="4dp">

                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu"
                    android:padding="10dp"
                    app:tint="@color/text_primary"
                    android:contentDescription="Menu"/>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Bebek AÄŸlama Analizi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:letterSpacing="-0.015"/>

                <!-- Settings Button -->
                <ImageButton
                    android:id="@+id/settingsButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:padding="10dp"
                    app:tint="@color/text_primary"
                    android:contentDescription="Settings"/>

            </RelativeLayout>

            <!-- Scrollable Content -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="72dp">

                    <!-- Main Status Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="48dp"
                        android:paddingBottom="16dp">

                        <!-- Pulse Visualizer Container -->
                        <FrameLayout
                            android:layout_width="240dp"
                            android:layout_height="240dp"
                            android:layout_marginVertical="16dp">

                            <!-- Outer Ring -->
                            <View
                                android:id="@+id/pulseRingOuter"
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                android:background="@drawable/pulse_ring_outer"/>

                            <!-- Middle Ring -->
                            <View
                                android:id="@+id/pulseRingMiddle"
                                android:layout_width="192dp"
                                android:layout_height="192dp"
                                android:layout_gravity="center"
                                android:background="@drawable/pulse_ring_middle"/>

                            <!-- Inner Ring -->
                            <View
                                android:id="@+id/pulseRingInner"
                                android:layout_width="144dp"
                                android:layout_height="144dp"
                                android:layout_gravity="center"
                                android:background="@drawable/pulse_ring_inner"/>

                            <!-- Core Mic Circle -->
                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@drawable/mic_circle"
                                android:elevation="8dp">

                                <ImageView
                                    android:id="@+id/micIcon"
                                    android:layout_width="44dp"
                                    android:layout_height="44dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_microphone"
                                    app:tint="@android:color/white"
                                    android:contentDescription="Microphone"/>

                            </FrameLayout>

                            <!-- Status Badge (LIVE FEED) -->
                            <LinearLayout
                                android:id="@+id/statusBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="-12dp"
                                android:background="@drawable/status_badge_bg"
                                android:paddingHorizontal="14dp"
                                android:paddingVertical="5dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:elevation="4dp">

                                <View
                                    android:id="@+id/statusDot"
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:background="@drawable/circle_small"/>

                                <TextView
                                    android:id="@+id/statusBadgeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CANLI"
                                    android:textSize="9sp"
                                    android:textStyle="bold"
                                    android:textColor="#CCFFFFFF"
                                    android:letterSpacing="0.08"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp"/>

                            </LinearLayout>

                        </FrameLayout>

                        <!-- Headlines -->
                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinleniyor..."
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:id="@+id/statusSubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arka planda dinleme aktif.\nOrtam sessiz."
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:layout_marginTop="6dp"
                            android:paddingHorizontal="16dp"/>

                    </LinearLayout>

                    <!-- Primary Action Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="32dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:id="@+id/actionButton"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginHorizontal="24dp"
                            android:background="@drawable/action_button_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <!-- Pause Icon Container -->
                            <FrameLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:background="@drawable/overlay_red_circle">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="â¸"
                                    android:textSize="12sp"/>

                            </FrameLayout>

                            <TextView
                                android:id="@+id/actionButtonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dinlemeyi Durdur"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Sensitivity Slider Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mikrofon Hassasiyeti"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"/>

                            <TextView
                                android:id="@+id/sensitivityLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YÃ¼ksek"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"/>

                        </LinearLayout>

                        <!-- Slider Track -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="6dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/slider_track_bg"/>

                            <View
                                android:id="@+id/sensitivityProgress"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/slider_progress"/>

                        </FrameLayout>

                    </LinearLayout>

                    <!-- Recent Activity Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="8dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Son Aktiviteler"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:id="@+id/viewAllButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TÃ¼mÃ¼nÃ¼ GÃ¶r"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:padding="6dp"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                        </LinearLayout>

                        <!-- Activity Cards Container -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/historyRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:clipToPadding="false"
                            android:paddingBottom="8dp"/>

                        <!-- Empty State -->
                        <LinearLayout
                            android:id="@+id/emptyHistoryContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜´"
                                android:textSize="40sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HenÃ¼z aktivite yok"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="6dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Debug Info -->
                    <TextView
                        android:id="@+id/debugText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="@color/text_disabled"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:padding="12dp"
                        tools:text="RMS: 0.015 | YAMNet: Speech"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <!-- Bottom Navigation (Compact) -->
            <LinearLayout
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/nav_background"
                android:paddingHorizontal="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:elevation="8dp">

                <!-- Home -->
                <LinearLayout
                    android:id="@+id/navHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ "
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ana Sayfa"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

                <!-- History -->
                <LinearLayout
                    android:id="@+id/navHistory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GeÃ§miÅŸ"
                        android:textSize="9sp"
                        android:textColor="@color/text_disabled"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

                <!-- Profile -->
                <LinearLayout
                    android:id="@+id/navProfile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profil"
                        android:textSize="9sp"
                        android:textColor="@color/text_disabled"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Arduino Status (floating inside FrameLayout) -->
        <LinearLayout
            android:id="@+id/arduinoStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="72dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/status_badge_bg"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <View
                android:id="@+id/arduinoIndicator"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle_small"/>

            <TextView
                android:id="@+id/arduinoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arduino_disconnected"
                android:textSize="9sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

    </FrameLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/navigationDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/surface"
        android:fitsSystemWindows="true">

        <!-- Drawer Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ AÄŸlama GeÃ§miÅŸi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ¼m tespit kayÄ±tlarÄ±"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_light"/>

        <!-- History List in Drawer -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/drawerHistoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
